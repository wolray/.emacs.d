(defun hyper-mode-toggle ()
  (interactive)
  (hyper-mode 0)
  (if (eq (key-binding (kbd "<apps>")) 'hyper-mode-on)
      (local-set-key (kbd "<apps>") '~)
    (local-set-key (kbd "<apps>") 'hyper-mode-on)
    (hyper-mode)))

