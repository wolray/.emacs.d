(defmacro make-command (func &optional sexp@0 sexp@1)
  (let ((ks (subst-char-in-string ?+ ? (symbol-name func))))
    `(defun ,func ()
       (interactive)
       (let ((cmd (key-binding (kbd ,ks))))
	 ,sexp@0
	 (when (commandp cmd) (call-interactively cmd))
	 ,sexp@1))))
