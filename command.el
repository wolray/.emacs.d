(defmacro my-map-key (obj key)
  `(if (symbolp ,obj)
       (let ((map-key (kbd (concat "M-g " (cadr ',key)))))
	 (global-set-key map-key ,obj)
	 (define-key key-translation-map ,key map-key))
     (define-key key-translation-map ,key ,obj)))

